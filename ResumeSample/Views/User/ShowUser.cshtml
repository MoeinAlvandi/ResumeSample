@model List<User>


<div>
    <table class="table table-bordered">
        <tr>
            <th>
                #
            </th>
            <th>
                Fullname
            </th>
            <th>
                Password
            </th>
            <th>
                <a href="/CreateUser" class="btn btn-info">
                    Add User
                </a>
            </th>
        </tr>

        @if(Model.Any())
        {
           foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Fullname
                    </td>
                    <td>
                        @item.Password
                    </td>
                    <td>
                        
                    </td>
                </tr>
            }
        }
        else
        {
            <tr style="text-align: center;">
                <td colspan="4">
                    No data found
                </td>
            </tr>
        }
    </table>
</div>